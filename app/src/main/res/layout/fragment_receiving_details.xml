<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/md_tinted"
    android:padding="5dp"
    android:layout_gravity="center"
    tools:context=".ui.main.fragments.receiving.details.ReceivingDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="30dp"
        android:paddingHorizontal="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:background="@drawable/circle_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>
        <TextView
            android:id="@+id/productDetailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txtClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/productDetailIdLabel"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/productDetailIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:layout_marginVertical="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/txtClose"
            app:layout_constraintStart_toEndOf="@+id/productDetailId"
            app:layout_constraintEnd_toStartOf="@+id/productDetailName"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/productDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/txtClose"
            app:layout_constraintStart_toEndOf="@+id/productDetailIdLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/productDetailHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:textSize="18sp"
            android:text="PRODUCT DETAILS"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/productDetailName"
            app:layout_constraintStart_toStartOf="@+id/productDetailId"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/productDetailSearchableLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="SKU / Barcode: "
            android:layout_marginVertical="10dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/productDetailHeader"
            app:layout_constraintStart_toStartOf="@+id/productDetailId"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/productDetailSearchable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/productDetailHeader"
            app:layout_constraintStart_toEndOf="@+id/productDetailSearchableLabel"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/productDetailQtyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="16sp"
            android:text="QTY: "
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/productDetailSearchable"
            app:layout_constraintStart_toStartOf="@+id/productDetailId"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/productDetailReceivedQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/productDetailSearchable"
            app:layout_constraintStart_toEndOf="@+id/productDetailQtyLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>